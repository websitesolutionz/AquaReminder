<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:padding="16dp">

    <!-- Top Section: Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/todays_intake"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary_light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Reset Icon -->
    <ImageView
        android:id="@+id/ivReset"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_refresh"
        android:padding="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/reset"
        app:layout_constraintTop_toTopOf="@id/tvTitle"
        app:layout_constraintBottom_toBottomOf="@id/tvTitle"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Circular Progress Container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardProgress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="200dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBottom_toTopOf="@id/btnDrinkWater"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_margin="32dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <!-- Circular Progress Bar -->
            <ProgressBar
                android:id="@+id/circularProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progressDrawable="@drawable/circular_progress"
                android:max="100"
                android:progress="0"
                android:indeterminate="false"/>

            <!-- Center Content -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerInParent="true">

                <!-- Water Drop Icon -->
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_water_drop"
                    android:contentDescription="@string/app_name"/>

                <!-- Current Intake -->
                <TextView
                    android:id="@+id/tvCurrentIntake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_blue"
                    android:layout_marginTop="16dp"/>

                <!-- Goal -->
                <TextView
                    android:id="@+id/tvGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/ 2000 ml"
                    android:textSize="20sp"
                    android:textColor="@color/text_secondary_light"/>

                <!-- Percentage -->
                <TextView
                    android:id="@+id/tvPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_aqua"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Drink Water Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDrinkWater"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="@string/drink_water"
        android:textSize="20sp"
        android:textStyle="bold"
        app:icon="@drawable/ic_water_drop"
        app:iconGravity="textStart"
        app:iconSize="32dp"
        app:cornerRadius="35dp"
        android:backgroundTint="@color/primary_blue"
        app:layout_constraintBottom_toTopOf="@id/tvMotivation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>

    <!-- Motivation Text -->
    <TextView
        android:id="@+id/tvMotivation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/keep_going"
        android:textSize="16sp"
        android:textColor="@color/text_secondary_light"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"/>

    <!-- Ad Banner Container (for free version) -->
    <FrameLayout
        android:id="@+id/adContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
