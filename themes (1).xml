<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Dark Theme -->
    <style name="Theme.AquaReminder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary_aqua</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/primary_aqua</item>
        <item name="colorSecondaryVariant">@color/primary_light</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Background Colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnBackground">@color/text_primary_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/surface_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Text -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="android:textColorHint">@color/text_hint_dark</item>
    </style>

    <!-- Card Style Dark -->
    <style name="Widget.AquaReminder.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_dark</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- Text Styles Dark -->
    <style name="TextAppearance.AquaReminder.Headline1">
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <style name="TextAppearance.AquaReminder.Headline2">
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <style name="TextAppearance.AquaReminder.Body1">
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <style name="TextAppearance.AquaReminder.Body2">
        <item name="android:textColor">@color/text_secondary_dark</item>
    </style>

    <style name="TextAppearance.AquaReminder.Caption">
        <item name="android:textColor">@color/text_secondary_dark</item>
    </style>

</resources>
